<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EstabelecimentoActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/estabelecimento_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="15dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/estabelecimento_imagem"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sao_paulo_sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/estabelecimento_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Chemistry Bar"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toBottomOf="@id/estabelecimento_imagem"
                app:layout_constraintEnd_toEndOf="@id/estabelecimento_imagem"
                app:layout_constraintStart_toStartOf="@id/estabelecimento_imagem"
                app:layout_constraintTop_toTopOf="@id/estabelecimento_imagem"
                app:layout_constraintVertical_bias="1.0"
                android:textSize="34dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@color/cardview_shadow_start_color"
                />

            <TextView
                android:id="@+id/estabelecimento_texto_endereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço"
                app:layout_constraintTop_toBottomOf="@id/estabelecimento_imagem"
                app:layout_constraintStart_toStartOf="@id/estabelecimento_imagem"
                app:layout_constraintEnd_toEndOf="@id/estabelecimento_imagem"
                android:layout_marginTop="50dp"
                />

            <EditText
                android:id="@+id/estabelecimento_endereco"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Endereço"
                app:layout_constraintTop_toBottomOf="@id/estabelecimento_texto_endereco"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>